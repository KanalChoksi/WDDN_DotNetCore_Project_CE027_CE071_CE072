

@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Texi_Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"   />

    <style>


        #nav {
            background-color: black;
            margin-top: 0%;

        }

        #navmenu {
            margin-left: 500px;
        }

        #footer {
            background-color: black;
            margin-bottom: 0px;
        }
    </style>
</head>
<body>
    <header>






        <nav class="navbar navbar-expand-lg bg-dark navbar-dark" id="nav">
   
            <div class="container">

                <a class="nav-link text-light" asp-controller="Home" asp-action="Index">TaxiCab</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse text-right pt-1" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="#about" class="nav-link">About</a>
                            <a class="nav-link text-dark">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="#questions" class="nav-link">Frequently Asked Questions</a>
                        </li>
                        <li class="nav-item">
                            <a href="#footer" class="nav-link">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SelectLogin">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="CustomerRegistration">Sign Up</a>
                        </li>
                    </ul>
                    @if (Context.Session.GetString("Username") != null)
                    {

                        <a class="form-group" asp-area="" asp-controller="Admin" asp-action="Logout">
                            <input type="submit" value="Logout" class="btn btn-primary" />&nbsp;
                        </a>
                    }
                </div>

            </div>
        </nav>




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="p-5 text-white text-center position-relative" id="footer">

   

        <section class="p-1" id="contact">
            <div class="container">
                <div class="row">
                    <h2>Contact Info</h2><br />
                    <p>A/87 Monalisa, Near Iscon Temple, Vadodara</p><br />
                    <p>+91 88666 85974</p>
                </div>
            </div>
        </section>
        <div class="container">


            <div class="p-5 text-white text-center lead">
                <a href="#" class="p-3"><i class="bi bi-twitter text-light mx-1"></i></a>
                <a href="#" class="p-3"><i class="bi bi-facebook text-light mx-1"></i></a>
                <a href="#" class="p-3"><i class="bi bi-linkedin text-light mx-1"></i></a>
                <a href="#" class="p-3"><i class="bi bi-instagram text-light mx-1"></i></a>
            </div>

            <p class="lead">Copyright &copy; 2021 TaxiCab</p>
            <a href="#" class="position-absolute bottom-0 end-0 p-5">
                <i class="bi bi-arrow-up-circle h1"></i>
            </a>
        </div>

    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
